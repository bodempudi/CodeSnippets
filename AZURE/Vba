Sub ExportSheetToPDF()
    Dim ws As Worksheet
    Dim pdfPath As String

    ' Set the current worksheet
    Set ws = ActiveSheet

    ' Ask user for where to save the PDF
    pdfPath = Application.GetSaveAsFilename( _
                InitialFileName:=ws.Name & ".pdf", _
                FileFilter:="PDF Files (*.pdf), *.pdf", _
                Title:="Save As PDF")

    ' Exit if cancelled
    If pdfPath = "False" Then Exit Sub

    ' Export the worksheet as PDF
    ws.ExportAsFixedFormat Type:=xlTypePDF, Filename:=pdfPath, Quality:=xlQualityStandard

    MsgBox "Sheet exported as PDF to:" & vbCrLf & pdfPath, vbInformation
End Sub
